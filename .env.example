# Environment Configuration
# Copy this file to .env and update values

# Server port (Railway auto-sets this)
PORT=3000

# Production mode
NODE_ENV=production

# Session secret - CHANGE THIS!
SESSION_SECRET=your-super-secret-key-here

# MongoDB Atlas connection string
# Get this from: MongoDB Atlas > Connect > Drivers > Connection string
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/emulation-tracker?retryWrites=true&w=majority
